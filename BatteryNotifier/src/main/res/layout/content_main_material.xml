<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="batterySetting"
                type="com.mblau.batterynotifier.viewmodel.Setting" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main_material"
            tools:context=".MainActivity">

        <RelativeLayout
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/option_margin"
                android:layout_marginTop="@dimen/option_margin"
                android:layout_marginEnd="@dimen/option_margin"
        >
            <TextView
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_battery"
                    android:id="@+id/textView"/>
            <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/textView"
                    android:layout_height="wrap_content"
                    android:max="@{batterySetting.spinnerLabels.size()}"
                    android:onValueChange="@{batterySetting.onValueChange()}"
                    android:text="@{batterySetting.transform()}"
                    android:id="@+id/lowBatterySpinner"
            >

            </SeekBar>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>